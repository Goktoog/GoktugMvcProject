<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GoktugMvcProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GoktugMvcProject.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <!-- Başlangıç: Navbar Yapısı -->
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <!-- Projenin Ana Sayfasına Link -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Deneme1,2</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navbar Menü Yapısı -->
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>

                    <!-- Login, Register ve Logout Linklerinin Dinamik Gösterimi -->
                    <ul class="navbar-nav">
                        <!-- Eğer kullanıcı oturum açtıysa Logout linki gösterilir -->
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <!-- Kullanıcının ismi gösterilir -->
                                <a class="nav-link text-dark" href="/Identity/Account/Manage">@User.Identity.Name</a>
                            </li>
                            <li class="nav-item">
                                <!-- Logout linki, oturumu kapatmak için -->
                                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Logout">Çıkış yap</a>
                            </li>
                        }
                        else
                        {
                            <!-- Eğer kullanıcı oturum açmamışsa Login ve Register linkleri gösterilir -->
                            <li class="nav-item">
                                <!-- Login (Giriş Yap) linki -->
                                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Giriş Yap</a>
                            </li>
                            <li class="nav-item">
                                <!-- Register (Kayıt Ol) linki -->
                                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Üye Ol</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
        <!-- Bitiş: Navbar Yapısı -->
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - GoktugMvcProject - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Javascript ve Bootstrap Kütüphaneleri -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
